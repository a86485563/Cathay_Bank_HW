<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sub_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background_grey"
            android:padding="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sub_action_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:background="@color/background_circle_image_light"/>

            <TextView
                android:id="@+id/sub_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:ellipsize="end"
                android:maxEms="5"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_mid"
                android:text="weatherweatherweatherweatherweatherweather"
                app:layout_constraintStart_toEndOf="@id/sub_action_image"
                app:layout_constraintTop_toTopOf="@+id/sub_action_image"
                app:layout_constraintBottom_toBottomOf="@+id/sub_action_image"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>